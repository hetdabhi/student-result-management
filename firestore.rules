rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && 
             request.auth.token.role == 'admin';
    }
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is accessing their own data
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    // Users collection rules
    match /users/{userId} {
      // Users can read their own profile
      allow read: if isAuthenticated() && isOwner(userId);
      
      // Admins can read all profiles
      allow read: if isAdmin();
      
      // Only admins can write user profiles
      allow write: if isAdmin();
    }
    
    // Results collection rules
    match /results/{resultId} {
      // Students can read only their own results
      // Check if the studentUID field in the document matches the authenticated user's UID
      allow read: if isAuthenticated() && 
                     resource.data.studentUID == request.auth.uid;
      
      // Admins can read all results
      allow read: if isAdmin();
      
      // Only admins can write results
      allow write: if isAdmin();
      
      // Explicitly deny write access for non-admin users
      // Students cannot write any results
      allow create, update, delete: if false;
    }
    
    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
